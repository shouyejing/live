<odoo>
    <act_window
        id="action_living_type"
        name="直播类型"
        res_model="living.type"
        view_mode="tree,form" />
    <act_window
        id="action_living_room"
        name="直播间信息"
        res_model="living.room"
        view_mode="tree,form"
        target="current"/>


    <act_window
        id="action_living_cls_circle"
        name="同学圈"
        res_model="living.cls.circle"
        view_mode="tree,form" />
